<h3>Course Details</h3>

<div class="card text-center">
    <div class="card-body">
        <h5 class="card-title"><%= @course.title%></h5>
    </div>
</div>
<table>
<thead></thead>
<tbody>
<% @assignments.each do |assignment| %>
<div style="display:flex;justify-content:space-around">
    <span><%= assignment.name %></span>
    <%= assignment.course_id %>
    <%= form_with url: "/courses/#{assignment.course_id }/assignments/#{assignment.id}/course_assignments", local: true do |f|%>
        <%= f.label 'Due Date' %>
        <%= f.password_field :due_date%>
    <%= f.submit "Add" %>
    <% end%>
</div>
<% end %>
<tbody>
<tfoot><th></th></tfoot>
<table>
<%= will_paginate @assignments %>