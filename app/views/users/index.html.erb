<div class="divSpace"></div>
<h4>Users List</h4>

	<p> ** Click on name to go to users infornation page. ** </p>

<div class="divSpace"></div>
<table class="user-table">
<tbody >
<tr>
<th> Name </th>
<th> Id </th>
<th> Role </th>
<th> Course </th>
<th> Status </th>

<tr>
<% @users.each do |user| %>
   <tr>
      <td>  <%= link_to user.full_name, user_path(user.id), class:"user-link" %> </td>
			<td>  <%= user.id %> </td>
			<td>  <%= user.role.role %> </td>
			<td>  <% user.courses.each do |course|  %>
						<%= course.title %> 
						<% end %> </td>
			<td> 
				<% if user.status == true %>
						 active
				<% else %>
					inactive 
				<% end %>
				 </td>
						
    </tr>
<% end %>



</tbody>

</table>

