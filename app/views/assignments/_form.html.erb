<% if @assignment.errors.any? %>
<ul>
    <% @assignment.errors.full_messages.each do |msg|%>
    <li><%= msg%></li>
    <% end %>
</ul>
<% end%>



<%= form_for @assignment do |f|%>
<div class="grid-assigment">

    <%= f.label :name, class:"grid-label" %>
    <%= f.text_field :name, class:'grid-field'%>

    <%= f.label :description, class:"grid-label" %>
    <%= f.text_area :description, class:'grid-field textarea'%>

    <%= f.submit :submit, class:"btn grid-button" %>

</div>

<% end%>